<Page x:ConnectionId='1'
    x:Class="Win_Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win_Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                        Height="464">
    <StackPanel>
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
            <Image Source="/Assets/Windows-10-Calculator-Fluent-Icon-Big-256 (1).png" Stretch="Fill" Width="15" Height="15" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="30,0,0,0"></Image>
            <TextBlock VerticalAlignment="Center" Margin="30,0,0,0" FontFamily="Microsoft Sans Serif" FontSize="14">Calculator</TextBlock>
        </StackPanel>
        <StackPanel Height="50" Margin="0,30,0,30">
            <TextBlock x:ConnectionId='26' x:Name="output" FontFamily="Microsoft Sans Serif" FontSize="48" HorizontalAlignment="Right" Margin="0,0,15,0">0</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:ConnectionId='22' x:Name="Percent" Width="50"                      >
                %
            </Button>
            <Button x:ConnectionId='23' x:Name="Clear_Entry" Width="50" Margin="2.5,0,1.25,0">
                CE
            </Button>
            <Button x:ConnectionId='24' x:Name="Clear" Width="50" Margin="1.25,0,2.5,0"                    >
                C
            </Button>
            <Button x:ConnectionId='25' x:Name="Delete" Width="50">
                DEL
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2.5,0,0">
            <Button x:ConnectionId='18' x:Name="x1" Width="50" FontStyle="Italic">
                1/x
            </Button>
            <Button x:ConnectionId='19' x:Name="x2" Width="50" Margin="2.5,0,1.25,0" FontStyle="Italic">
                x^2
            </Button>
            <Button x:ConnectionId='20' x:Name="xsqr" Width="50" Margin="1.25,0,2.5,0" FontStyle="Italic">
                2√x
            </Button>
            <Button x:ConnectionId='21' x:Name="divide" Width="50"                     >
                ÷
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2.5,0,0">
            <Button x:ConnectionId='14' x:Name="_7" Width="50"                 >
                7
            </Button>
            <Button x:ConnectionId='15' x:Name="_8" Width="50" Margin="2.5,0,1.25,0"                 >
                8
            </Button>
            <Button x:ConnectionId='16' x:Name="_9" Width="50" Margin="1.25,0,2.5,0"                 >
                9
            </Button>
            <Button x:ConnectionId='17' x:Name="multiply" Width="50"                       >
                x
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2.5,0,0">
            <Button x:ConnectionId='10' x:Name="_4" Width="50"                 >
                4
            </Button>
            <Button x:ConnectionId='11' x:Name="_5" Width="50" Margin="2.5,0,1.25,0"                 >
                5
            </Button>
            <Button x:ConnectionId='12' x:Name="_6" Width="50" Margin="1.25,0,2.5,0"                 >
                6
            </Button>
            <Button x:ConnectionId='13' x:Name="subtract" Width="50"                       >
                -
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2.5,0,0">
            <Button x:ConnectionId='6' x:Name="_1" Width="50"                 >
                1
            </Button>
            <Button x:ConnectionId='7' x:Name="_2" Width="50" Margin="2.5,0,1.25,0"                 >
                2
            </Button>
            <Button x:ConnectionId='8' x:Name="_3" Width="50" Margin="1.25,0,2.5,0"                 >
                3
            </Button>
            <Button x:ConnectionId='9' x:Name="add" Width="50"                  >
                +
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2.5,0,0">
            <Button x:ConnectionId='2' x:Name="plus_minus" Width="50"                         >
                +/-
            </Button>
            <Button x:ConnectionId='3' x:Name="_0" Width="50" Margin="2.5,0,1.25,0"                 >
                0
            </Button>
            <Button x:ConnectionId='4' x:Name="dot" Width="50" Margin="1.25,0,2.5,0"                  >
                .
            </Button>
            <Button x:ConnectionId='5' x:Name="equal" Width="50"                    >
                =
            </Button>
        </StackPanel>
    </StackPanel>
</Page>

